# SSL Certificate Management Environment Configuration

# MySQL Configuration
MYSQL_ROOT_PASSWORD=secure_root_password_2024
MYSQL_PASSWORD=email_password_123

# Redis Configuration
REDIS_PASSWORD=redis_secure_password_2024

# SSL Configuration
LETS_ENCRYPT_EMAIL=admin@example.com
NOTIFICATION_EMAIL=admin@example.com

# SSL Certificate Settings
SSL_CERTS_DIRECTORY=/opt/ssl/certs
SSL_NGINX_CONFIG_DIRECTORY=/etc/nginx/conf.d
SSL_AUTO_RENEWAL_ENABLED=true
SSL_RENEWAL_DAYS_BEFORE=30
SSL_MAX_RENEWAL_FAILURES=5

# Security Settings
SSL_PROTOCOLS=TLSv1.2 TLSv1.3
SSL_CIPHERS=ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384
SSL_PREFER_SERVER_CIPHERS=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# OCSP Settings
OCSP_STAPLING_ENABLED=true
OCSP_RESOLVER=8.8.8.8 8.8.4.4
OCSP_RESOLVER_TIMEOUT=5

# Notification Settings
NOTIFICATION_ENABLED=true
NOTIFICATION_WEBHOOK=

# Docker Settings
DOCKER_ENABLED=true
DOCKER_NGINX_CONTAINER=ssl-nginx
DOCKER_APP_CONTAINER=ssl-email-app

# Monitoring Settings
MONITORING_ENABLED=true
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_URL=/.well-known/health

# Log Settings
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# Backup Settings
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=90
BACKUP_COMPRESSION=true

# Firewall Settings
FIREWALL_AUTO_CONFIGURE=false
FIREWALL_ALLOW_HTTP=true
FIREWALL_ALLOW_HTTPS=true

# Development Settings (set to false in production)
LETS_ENCRYPT_STAGING=false
DEBUG_MODE=false

# Application Settings
APP_SERVER_HOST=localhost
APP_SERVER_PORT=8080
FRONTEND_PORT=3000

# Time Zone
TZ=Asia/Shanghai

# Domain Configuration (comma-separated list of domains to manage)
MANAGED_DOMAINS=example.com,mail.example.com,api.example.com

# SSL Certificate Types Enabled
ENABLE_LETS_ENCRYPT=true
ENABLE_CUSTOM_CERTS=true
ENABLE_SELF_SIGNED=true

# API Configuration
API_BASE_URL=https://api.example.com
API_VERSION=v1
API_TIMEOUT=30

# Performance Settings
MAX_CONCURRENT_RENEWALS=3
RENEWAL_RETRY_DELAY=300
CONNECTION_TIMEOUT=30
READ_TIMEOUT=60